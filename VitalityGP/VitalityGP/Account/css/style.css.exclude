body {
    background: #FFFFFF;
    color: #888;
    font-family: 'Ubuntu Mono' , sans-serif;
    text-transform: uppercase;
}
 
.box {
    width: 90%;
    max-width: 450px;
    height: auto;
    margin: 0 auto;
    margin-top: 50px;
    background: #647F9C;
    border-radius: 7px;
    box-shadow: 0px 3px 10px 1px rgba(0, 0, 0, 0.9);
}
 
