.content h1 {
    font-size: 24px;
    font-weight: 400;
    color: #FFFFFF;
    letter-spacing: 0.125em;
    text-align: center;
}
 
.field {
    width: 80%;
    margin: 20px auto;
    padding: 10px;
    background: #FFFFFF;
    border: none;
    box-shadow: 0px 1px 0px 0px #111;
    border-radius: 3px;
    outline: none;
    color: #647F9C;
    font-weight: 700;
    letter-spacing: 0.125em;
    text-align: center;
    text-transform: uppercase;
}
 
 
::-webkit-input-placeholder {
    /* WebKit browsers */
    color: #647F9C;
}
:-moz-placeholder{ /* Mozilla Firefox 4 to 18 */
  color:#647F9C;
}
::-moz-placeholder{ /* Mozilla Firefox 19+ */
  color:#647F9C;
}
:-ms-input-placeholder{ /* Internet Explorer 10+ */
  color:#647F9C;
}
 
 
 
